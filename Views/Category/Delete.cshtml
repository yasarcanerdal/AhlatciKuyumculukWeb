@using AhlatciKuyumculukWeb.Core.Entities;

@model Category


<form method="post">

	<div class="border p-3 mt-5">

		<div class="row pb-3">
			<h2 class="text-primary">Kategori Sil</h2>
		</div>
		<div class="mb-3">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" disabled class="form-control" />  @*Disabled:Silinecek kategoriyi olduğu gibi getirmek*@
		</div>

		<button type="submit" class="btn btn-lg btn-primary" style="width:200px">Kategori Sil</button>

		<a asp-controller="Category" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">Kategorilere Geri Dön</a>

	</div>
</form>