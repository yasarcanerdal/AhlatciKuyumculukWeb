@using AhlatciKuyumculukWeb.Core.Entities;

@model List<Category>

@if (TempData["basarili"] != null)
{
	<h2 style="color:red">@TempData["basarili"]</h2>
}

<div class="container">

	<div class="row pt-3 pb-4">
	     <div>
	       <h1>Kategoriler</h1>
	     </div>
	</div>


	<table class="table table-bordered">
		<thead>
				<tr>
					<th>
						Id
					</th>
					<th>
						Kategori
					</th>
					<th>

					</th>
					<th>

					</th>
				</tr>
		</thead>

		<tbody>
			@foreach(var category in Model)
			{
				<tr>
					<td>@category.Id</td>
					<td>@category.Name</td>
					<td>
					    <a asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" type="button" class="btn btn-success" style="width:150px">Güncelle</a>
					</td>
					<td>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" type="button" class="btn btn-danger" style="width:150px">Sil</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="Category" asp-action="Add" class="btn btn-lg btn-primary" type="button">Yeni Kategori Oluştur</a>
		</div>
	</div>

</div>