@using AhlatciKuyumculukWeb.Core.Entities;

@model List<ToBuy>

@if (TempData["basarili"] != null)
{
	<h2 style="color:red">@TempData["basarili"]</h2>
}

<div class="container">

	<div class="row pt-3 pb-4">
	     <div>
	       <h1>Satın Almalar</h1>
	     </div>
	</div>


	<table class="table table-bordered">
		<thead>
				<tr>
					<th>
						Id
					</th>
					<th>
					   MüşteriId
					</th>
					<th>
					   Ürün Özelliği
					</th>
					<th>

					</th>
					<th>

					</th>
				</tr>
		</thead>

		<tbody>
			@foreach(var toBuy in Model)
			{
				<tr>
					<td>@toBuy.Id</td>
					<td>@toBuy.CustomerId</td>
					<td>@toBuy.Product.Feature</td>


					<td>
					    <a asp-controller="ToBuy" asp-action="AddUpdate" asp-route-id="@toBuy.Id" type="button" class="btn btn-success" style="width:150px">Güncelle</a>
					</td>
					<td>
						<a asp-controller="ToBuy" asp-action="Delete" asp-route-id="@toBuy.Id" type="button" class="btn btn-danger" style="width:150px">Sil</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="ToBuy" asp-action="AddUpdate" class="btn btn-lg btn-primary" type="button">Yeni Satın Alma Oluştur</a>
		</div>
	</div>

</div>